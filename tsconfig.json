{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "node"],
    "skipLibCheck": true,
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "typeRoots": [
      "./src/interfaces",
      "./src/types",
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "cfg",
    "postgen",
    "proto",
    "staticProto",
  ]
}
